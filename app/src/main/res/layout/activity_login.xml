<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mx.ken.devf.uper.SignUpActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/logo_redes_size"
            android:layout_weight="1"
            android:id="@+id/facebook_button"
            android:src="@drawable/facebook_logo"
            android:scaleType="centerInside"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.07" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/logo_redes_size"
            android:src="@drawable/google_plus_logo"
            android:scaleType="centerCrop"
            android:id="@+id/google_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <TextView
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="@color/highlighted_text_material_light"
        android:id="@+id/textView4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="0"
        android:id="@+id/textView5"
        android:layout_below="@+id/linearLayout3"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="@color/highlighted_text_material_light"
        android:id="@+id/textView6"
        android:layout_marginLeft="14dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/linearLayout3" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mail_et_login"
        android:inputType="textEmailAddress"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView5"
        android:hint="yourmail@mail.com"
        android:layout_alignStart="@+id/textView4" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/password_et_login"
        android:layout_below="@+id/mail_et_login"
        android:layout_alignStart="@id/mail_et_login" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/siguiente"
        android:textColor="@color/white"
        android:id="@+id/button_siguiente_login"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:layout_below="@+id/password_et_login"
        android:layout_marginRight="10dp"
        android:layout_alignStart="@id/mail_et_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/link_text_material_light"
        android:text="@string/restore_password"
        android:id="@+id/textView7"
        android:layout_below="@+id/button_siguiente_login"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
